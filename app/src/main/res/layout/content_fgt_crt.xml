<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_fgt_crt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.flyz.zwp.spacetime.activities.FgtCrtActivity"
    tools:showIn="@layout/activity_fgt_crt">

    <EditText
        android:id="@+id/edit_fgt_crt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="title"
        android:lines="1"
        android:maxLines="1"
        android:background="@drawable/edit_bg"/>
    <TextView
        android:id="@+id/tv_fgt_crt_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="time"
        android:layout_below="@+id/edit_fgt_crt_title"
        android:padding="12dp"/>
    <TextView
        android:id="@+id/tv_fgt_crt_locdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="desc"
        android:layout_below="@+id/tv_fgt_crt_time"
        android:padding="12dp"/>
    <TextView
        android:id="@+id/tv_fgt_crt_verif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="verif"
        android:layout_below="@+id/tv_fgt_crt_locdesc"
        android:padding="12dp"/>
    <EditText
        android:id="@+id/edit_fgt_crt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_fgt_crt_verif"
        android:hint="content"
        android:lines="3"
        android:scrollbars="vertical"
        android:background="@drawable/edit_bg"/>
    <LinearLayout
        android:id="@+id/ll_cbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/edit_fgt_crt_content">
        <CheckBox
            android:id="@+id/cb_fgt_crt_syn"
            android:checked="true"
            android:text="同步"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           />
        <CheckBox
            android:id="@+id/cb_fgt_crt_show"
            android:checked="true"
            android:text="可见"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_fgt_crt_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add files"
        android:layout_below="@+id/ll_cbs"/>

    <ListView
        android:id="@+id/lv_fgt_crt_more_info"
        android:layout_below="@+id/btn_fgt_crt_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    </ListView>


</RelativeLayout>
