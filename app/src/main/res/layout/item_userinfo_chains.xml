<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit_bg">
<TextView
    android:id="@+id/item_uinfo_chain_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="chName"
    android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/item_uinfo_chain_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="chDetail"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/item_uinfo_chain_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="chState"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/item_uinfo_chain_sTime"
            android:text="开始时间"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/item_uinfo_chain_eTime"
            android:text="开始时间"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_uinfo_chain_cTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ctime"
        android:layout_marginBottom="15dp"/>

</LinearLayout>